{% extends 'base.html.twig' %}

{% block title %}Fiche du film {{ movie.Title }}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    {{ dump(movie) }}

    <div class="row">
        <div class="col s12 m7">
          <div class="card">
            <div class="card-image">
              <img src="{{ movie.Poster }}">
              <span class="card-title">
                {{ movie.Title }}
              </span>
            </div>
            <div class="card-content">
              <p>{{ movie.Plot }}</p>
            </div>
            <div class="card-action">
              {# Rendez vous sur https://symfony.com/doc/current/templates.html#templates-link-to-pages pour apprendre à faire des liens en twig #}
              <a href="{{ path('Liste des films') }}">Retour à la liste des films</a>
            </div>
          </div>
        </div>
      </div>
</div>
{% endblock %}
